{
  "compilerOptions": {
    "baseUrl": "src",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "experimentalDecorators": true,
    "typeRoots": ["./src/@types/", "./node_modules/@types/"]
  },
  "include": ["./src/**/*"],
  "exclude": ["__tests__", "node_modules", "typings", "@types", "babel.config.js", "metro.config.js", "jest.config.js"]
}
